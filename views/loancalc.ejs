            <input class = "textbox" id = "interest">
            <div>
            Loan Term<br>
            <input class = "textbox" type="number" id = "time">
            <select id ="timetype">                
                <option value="months">Months</option>
                <option value="years">Years</option>
            </select>
            </div>
            <br>
            <button id = "calcbutton">Calculate</button>
            <h3 id = "result"></h3>
        </div>

